<section>
  <p class="intro">Popovers are like tooltips on steroids. They allow you to display any amount of arbitrary content simply by hovering over the target text.</p>
</section>
<section>
  <h3>Examples</h3>

  {{#rad-card as |components|}}
    {{#components.title}}Basic Examples{{/components.title}}
    {{#components.body}}

      {{#rad-popover as |components|}}
        {{#components.target}}Popover button{{/components.target}}
        {{#components.content position="bottom"}}
          <img src="https://media.giphy.com/media/KVUhxQAqrAV3i/giphy.gif" style="width: 100%;" alt="" />
        {{/components.content}}
      {{/rad-popover}}

      {{#rad-popover as |components|}}
        {{#components.target link=true}}Popover link{{/components.target}}
        {{#components.content position="bottom"}}
          <img src="https://media.giphy.com/media/KVUhxQAqrAV3i/giphy.gif" style="width: 100%;" alt="" />
        {{/components.content}}
      {{/rad-popover}}

    {{/components.body}}
  {{/rad-card}}

  {{#rad-card as |components|}}
    {{#components.title}}Positions{{/components.title}}
    {{#components.body}}

      {{#rad-popover position="top" as |components aria-describedby|}}
        {{#rad-button aria-describedby=aria-describedby}}Top{{/rad-button}}
        {{#components.content}}
          <img src="https://media.giphy.com/media/KVUhxQAqrAV3i/giphy.gif" style="width: 100%;" alt="" />
        {{/components.content}}
      {{/rad-popover}}

      {{#rad-popover position="bottom" as |components aria-describedby|}}
        {{#rad-button aria-describedby=aria-describedby}}Bottom{{/rad-button}}
        {{#components.content}}
          <img src="https://media.giphy.com/media/KVUhxQAqrAV3i/giphy.gif" style="width: 100%;" alt="" />
        {{/components.content}}
      {{/rad-popover}}

      {{#rad-popover position="left" as |components aria-describedby|}}
        {{#rad-button aria-describedby=aria-describedby}}Left{{/rad-button}}
        {{#components.content}}
          <img src="https://media.giphy.com/media/KVUhxQAqrAV3i/giphy.gif" style="width: 100%;" alt="" />
        {{/components.content}}
      {{/rad-popover}}

      {{#rad-popover position="right" as |components aria-describedby|}}
        {{#rad-button aria-describedby=aria-describedby}}Right{{/rad-button}}
        {{#components.content}}
          <img src="https://media.giphy.com/media/KVUhxQAqrAV3i/giphy.gif" style="width: 100%;" alt="" />
        {{/components.content}}
      {{/rad-popover}}

    {{/components.body}}
  {{/rad-card}}

  {{#rad-card as |components|}}
    {{#components.title}}Sizes{{/components.title}}
    {{#components.body}}

      {{#rad-popover position="top" size="large" as |components aria-describedby|}}
        {{#rad-button aria-describedby=aria-describedby}}Large{{/rad-button}}
        {{#components.content}}
          <img src="https://media.giphy.com/media/KVUhxQAqrAV3i/giphy.gif" style="width: 100%;" alt="" />
        {{/components.content}}
      {{/rad-popover}}

      {{#rad-popover position="top" size="x-large" as |components aria-describedby|}}
        {{#rad-button aria-describedby=aria-describedby}}X-Large{{/rad-button}}
        {{#components.content}}
          <img src="https://media.giphy.com/media/KVUhxQAqrAV3i/giphy.gif" style="width: 100%;" alt="" />
        {{/components.content}}
      {{/rad-popover}}

    {{/components.body}}
  {{/rad-card}}

</section>
<section>
  <h3>Passed Properties</h3>

  <table class="u-full-width">
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Default</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><code>position</code></td>
        <td>String</td>
        <td>''</td>
        <td>
          The position that the tooltip is created in relative to its anchor
          element. Valid options are: <code>top</code>, <code>bottom</code>,
          <code>left</code>, <code>right</code>, <code>bottom-left</code>,
          and <code>bottom-right</code>. Defaults to <code>bottom</code> if no
          value is supplied.
        </td>
      </tr>
      <tr>
        <td><code>size</code></td>
        <td>String</td>
        <td>''</td>
        <td>
          The size of the tooltip itself. A list of preset sizes available are:
          <code>small</code>, <code>medium</code>, <code>large</code>,
          <code>x-large</code>. Defaults to <code>medium</code> if no value is
          supplied.
        </td>
      </tr>
    </tbody>
  </table>
</section>
