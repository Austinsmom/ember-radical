    {{#components.content}}
      <img src="https://media.giphy.com/media/KVUhxQAqrAV3i/giphy.gif" style="width: 100%;" alt="" />
    {{/components.content}}
  {{/rad-popover}}
  <hr>
  <h5><code>position="bottom-left"</code></h5>
  {{#rad-popover position="bottom-left" as |components aria-describedby|}}
    {{#rad-button aria-describedby=aria-describedby}}This popover appears to the bottom and left{{/rad-button}}
    {{#components.content}}
