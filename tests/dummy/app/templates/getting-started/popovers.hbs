'}}

  {{code-example
    title='Sizes'
    language='handlebars' code='{{#rad-popover position="top" size="large" as |components aria-describedby|}}
  {{#rad-button aria-describedby=aria-describedby}}Large{{/rad-button}}
  {{#components.content}}
    <img src="https://media.giphy.com/media/KVUhxQAqrAV3i/giphy.gif" style="width: 100%;" alt="" />
  {{/components.content}}
{{/rad-popover}}

{{#rad-popover position="top" size="x-large" as |components aria-describedby|}}
  {{#rad-button aria-describedby=aria-describedby}}X-Large{{/rad-button}}
  {{#components.content}}
    <img src="https://media.giphy.com/media/KVUhxQAqrAV3i/giphy.gif" style="width: 100%;" alt="" />
  {{/components.content}}
{{/rad-popover}}'}}
</section>
<section>
  <h3>Properties</h3>

  <hr>

  {{#rad-tabs
    defaultTab='passedProps'
    card=true as |components|}}
    {{#components.content
      label='Passed'
      elementId='passedProps'}}
      <table class="table w-100">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Default</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><code>position</code></td>
            <td>{String}</td>
            <td>'bottom'</td>
            <td>
              <p>The position that the tooltip is created in relative to its anchor element.</p>
              <p class="small enums"><strong>Enums:</strong> top, bottom, left, right, bottom-left, bottom-right</p>
            </td>
          </tr>
          <tr>
            <td><code>size</code></td>
            <td>String</td>
            <td>'medium'</td>
            <td>
              <p>The size of the tooltip itself.</p>
              <p class="small enums"><strong>Enums:</strong> small, medium, large, x-large</p>
            </td>
          </tr>
        </tbody>
      </table>
    {{/components.content}}
  {{/rad-tabs}}
</section>
