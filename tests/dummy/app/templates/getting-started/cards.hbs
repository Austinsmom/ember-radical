<section>
  <p class="intro">Cards are simple presentational components with no real functionality but with a consistent visual language for displaying card-like content.</p>
</section>
<section>
  <h3>Examples</h3>

  {{! V1 }}
  {{code-example
    title='Basic Example'
    language='handlebars'
    code=
"{{#rad-card as |components|}}
  {{#components.body}}Simple card{{/components.body}}
{{/rad-card}}"}}

  {{code-example
    title='Extended Examples'
    language='handlebars'
    code=
"{{#rad-card as |components|}}
  {{#components.title}}Simple card w/ title{{/components.title}}
  {{#components.body}}Some content{{/components.body}}
{{/rad-card}}

{{#rad-card as |components|}}
  {{#components.title}}Simple card w/ header and footer{{/components.title}}
  {{#components.body}}Some content{{/components.body}}
  {{#components.footer}}Footer content{{/components.footer}}
{{/rad-card}}

{{#rad-card brand='primary' as |components|}}
  {{#components.title}}Branded Header{{/components.title}}
  {{#components.body}}Some content{{/components.body}}
{{/rad-card}}

{{#rad-card brand='primary' as |components|}}
  {{#components.title}}Branded card w/ custom content{{/components.title}}
  {{#components.body}}
    {{#rad-button}}Button{{/rad-button}}
  {{/components.body}}
  {{#components.footer}}Footer content{{/components.footer}}
{{/rad-card}}"}}

  {{! V2 }}
  {{!--{{code-example
    title='Basic Example'
    language='handlebars'
    code=
"{{#rad-card as |components|}}
  {{#components.block}}
    {{#components.title tagName='h4'}}
      Card title
    {{/components.title}}
    <p class='card-text'>Some quick example text to build on the card title and make up the bulk of the card's content.</p>
  {{/components.block}}
{{/rad-card}}"}}

  {{code-example
      title='Extended Examples'
      language='handlebars'
      code=
  "{{#rad-card as |c|}}
    {{#c.block}}
    {{#c.title}}Card title{{/c.title}}
    <h6 class='card-subtitle mb-2 text-muted'>Card subtitle</h6>
    <p class='card-text'>Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href='#' class='card-link'>Card link</a>
    <a href='#' class='card-link'>Another link</a>
  {{/c.block}}
{{/rad-card}}

{{#rad-card as |c|}}
  {{#c.header}}
    Featured
  {{/c.header}}
  {{#c.block}}
    {{#c.title}}Special title treatment{{/c.title}}
    <p class='card-text'>With supporting text below as a natural lead-in to additional content.</p>
    {{#rad-button brand='primary'}}Go somewhere{{/rad-button}}
  {{/c.block}}
{{/rad-card}}

{{#rad-card
  classNames='mb-3 text-center card-inverse'
  brand='primary'
  as |c|}}
  {{#c.block}}
    <blockquote class='card-blockquote'>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
      <footer>Someone famous in <cite title='Source Title'>Source Title</cite></footer>
    </blockquote>
  {{/c.block}}
{{/rad-card}}"}}--}}

</section>
<section>
  <h3>Properties</h3>

  <hr>

  {{#rad-tabs
    defaultTab='passedProps'
    card=true as |components|}}
    {{#components.content
      label='Passed'
      elementId='passedProps'}}
      <table class="full-width">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Default</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><code>brand</code></td>
            <td>{String}</td>
            <td>''</td>
            <td>
              <p>The brand class to use to style the header and footer subcomponents.</p>
              <p class="small enums"><strong>Enums:</strong> primary, secondary</p>
            </td>
          </tr>
        </tbody>
      </table>
    {{/components.content}}
    {{#components.content
      label='Yielded'}}
      <table class="full-width">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Default</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><code>components</code></td>
            <td>Object</td>
            <td>N/A</td>
            <td>
              <p>Child components yielded by the parent.</p>
              <p class="small enums"><strong>Enums:</strong>
              components.block, components.header, components.footer, components.title</p>
            </td>
          </tr>
        </tbody>
      </table>
    {{/components.content}}
  {{/rad-tabs}}
</section>
