      {{#components.content}}
        <img src="https://media.giphy.com/media/KVUhxQAqrAV3i/giphy.gif" style="width: 100%;" alt="" />
      {{/components.content}}
    {{/core-popover}}
    <hr>
    <h5><code>position="bottom-left"</code></h5>
    {{#core-popover position="bottom-left" as |components aria-describedby|}}
      {{#core-button aria-describedby=aria-describedby}}This popover appears to the bottom and left{{/core-button}}
      {{#components.content}}
        <img src="https://media.giphy.com/media/KVUhxQAqrAV3i/giphy.gif" style="width: 100%;" alt="" />
      {{/components.content}}
    {{/core-popover}}
    <hr>
  </div>

  <div class="col-xs-12">
    <hr>
  </div>
</div>

<div class="row">
  <div class="col-xs-8">
    <h2>Sizes!</h2>
    <h5><code>size="large"</code></h5>
